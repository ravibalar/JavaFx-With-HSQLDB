<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxWidth="760.0" prefHeight="180.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PostSummaryViewController">
    <children>
        <HBox fx:id="postSummary" maxWidth="760.0" prefHeight="180.0" prefWidth="760.0">
            <children>
                <FlowPane alignment="CENTER_LEFT" prefHeight="180.0" prefWidth="550.0" styleClass="pane">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </HBox.margin>
                    <children>
                        <ImageView fx:id="postImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0" />
                            </FlowPane.margin>
                        </ImageView>
                        <GridPane fx:id="postSummaryGrid" alignment="CENTER" prefHeight="170.0" prefWidth="350.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="170.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="170.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <FlowPane.margin>
                                <Insets left="5.0" right="5.0" />
                            </FlowPane.margin>
                        </GridPane>
                    </children>
                </FlowPane>
                <FlowPane alignment="CENTER_RIGHT" prefHeight="150.0" prefWidth="200.0" rowValignment="TOP" styleClass="pane">
                    <children>
                        <Button fx:id="btnReplyPost" mnemonicParsing="false" onAction="#btnReplyPostHandler" text="Reply">
                            <FlowPane.margin>
                                <Insets left="5.0" right="5.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button fx:id="btnMoreDetail" mnemonicParsing="false" onAction="#btnMoreDetailHandler" text="More Details">
                            <FlowPane.margin>
                                <Insets left="5.0" right="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </HBox.margin>
                </FlowPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
